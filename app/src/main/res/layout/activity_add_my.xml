<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMyActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 기본 텍스트 뷰 및 버튼 -->
<!--
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edt_id"
                android:hint="ID"
                android:inputType="textWebEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_textColorHint="@color/myTextColor"
                app:met_textColor="@color/myTextColor"
                app:met_primaryColor="@color/myTextColor"
                app:met_iconPadding="0dp"
                app:met_iconRight="@drawable/ic_person"/> -->

            <EditText
                android:id="@+id/addActivity_editText_activityName"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="31dp"
                android:layout_marginTop="156dp"
                android:ems="10"
                android:hint="@string/addActivity_example_name_activity"
                android:inputType="textPersonName"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- 활동 이름 -->

            <EditText
                android:id="@+id/addActivity_editText_plantName"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="31dp"
                android:layout_marginTop="236dp"
                android:ems="10"
                android:hint="@string/addActivity_example_name_plant"
                android:inputType="textPersonName"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <EditText
                android:id="@+id/addActivity_editText_createdAt"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="31dp"
                android:layout_marginTop="316dp"
                android:ems="10"
                android:hint="@string/addActivity_example_createdAt"
                android:inputType="date"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- 식물명 -->

            <EditText
                android:id="@+id/addActivity_editText_manager"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="31dp"
                android:layout_marginTop="396dp"
                android:ems="10"
                android:hint="@string/addActivity_example_id_manager"
                android:inputType="textPersonName"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/addActivity_editText_participants"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="31dp"
                android:layout_marginTop="476dp"
                android:ems="10"
                android:hint="@string/addActivity_example_id_participant"
                android:inputType="textPersonName"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- 활동 시작 일시 -->

            <ImageView
                android:id="@+id/addActivity_back"
                android:layout_width="40dp"
                android:layout_height="38dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/ic_menu_revert" />

            <TextView
                android:id="@+id/addActivity_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:text="@string/addActivity_name"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- 매니저 -->

            <TextView
                android:id="@+id/addActivity_textView_activityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="130dp"
                android:text="@string/addActivity_attr_name_activity"
                android:textSize="19sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/addActivity_textView_plantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="210dp"
                android:text="@string/addActivity_attr_name_plant"
                android:textSize="19sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- 참가자 -->

            <TextView
                android:id="@+id/addActivity_textView_createdAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="290dp"
                android:text="@string/addActivity_attr_name_createdAt"
                android:textSize="19sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/addActivity_textView_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="370dp"
                android:text="@string/addActivity_attr_id_manager"
                android:textSize="19sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <!-- 대표 사진 -->

            <TextView
                android:id="@+id/addActivity_textView_participants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="450dp"
                android:text="@string/addActivity_attr_id_participants"
                android:textSize="19sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- 대표 센서 -->

            <TextView
                android:id="@+id/addActivity_textView_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="530dp"
                android:text="@string/addActivity_attr_image"
                android:textSize="19sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- 등록 버튼 -->

            <TextView
                android:id="@+id/addActivity_textView_sensor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="610dp"
                android:text="@string/addActivity_attr_sensor"
                android:textSize="19sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/addActivity_add"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="670dp"
                android:text="@string/addActivity_button_add"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>