<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/dictionary_listView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/dictionary_listView_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <LinearLayout
            android:id="@+id/dictionary_listView_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dictionary_listView_plantName"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:text="식물명: plantName"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dictionary_listView_habitat"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:text="원산지: habitat"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dictionary_listView_difficulty"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:text="난이도: difficulty"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
