<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
            android:id="@+id/comments_listitem_layout_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작성자:  "
            android:textSize="12sp"/>

            <TextView
            android:id="@+id/comments_listitem_layout_author_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="idididid"
            android:textSize="12sp"/>

            <TextView
            android:id="@+id/comments_listitem_layout_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="     날짜: "
            android:textSize="12sp"/>

            <TextView
            android:id="@+id/comments_listitem_layout_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-12-01"
            android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/comments_listitem_layout_content"
                android:layout_width="340dp"
                android:layout_height="105dp"
                android:textSize="14sp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>